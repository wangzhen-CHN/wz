<% if (site.posts.length) { %>
<div class="card widget">
    <div class="card-content" style="max-height:700px; overflow-y: auto;">
        <h3 class="menu-label">
            <%= __('widget.recents') %>
        </h3>
        <% site.posts.sort('date', -1).each(post => { %>
        <article class="media" style="margin-bottom: 0">

            <div class="media-content">
                <div class="content">
                    <div><time class="has-text-grey is-size-7 is-uppercase" datetime="<%= date_xml(post.date) %>"><%= date(post.date) %></time></div>
                    <a href="<%- url_for((post.link?post.link:post.path)) %>" class="has-link-black-ter is-size-6"><%= post.title %></a>
                    <p class="is-size-7 is-uppercase">
                        <%- list_categories(post.categories, {
                            show_count: false,
                            class: 'has-link-grey ',
                            depth:2,
                            style: 'none',
                            separator: ' / '}) %>
                    </p>
                </div>
            </div>
        </article>
        <% }) %>
    </div>
</div>
<% } %>